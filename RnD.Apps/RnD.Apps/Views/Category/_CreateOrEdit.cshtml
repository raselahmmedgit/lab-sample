@model RnD.Apps.Models.Category

@using (Ajax.BeginForm("Save", "Category", null,
        new AjaxOptions
        {
            UpdateTargetId = "updateTargetId",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            OnBegin = "AppCommonModalBegin",
            OnSuccess = "AppCommonModalSuccess",
            OnComplete = "AppCommonModalComplete",
        }, new { @id = "appCommonModalForm", @class = "form-horizontal" }))
{
    <div class="form-group">
        <div class="col-sm-12">
            <div id="updateTargetId" class="bg-warning" style="display: none">
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor(model => model.CategoryId)
        <label class="col-sm-4 control-label">@Html.LabelFor(model => model.Name)</label>
        <div class="col-sm-8">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12 pull-right">
            <input type="submit" class="btn btn-primary btn-sm" value="Save" />
            <input type="button" class="btn btn-warning btn-sm" value="Cancel" onclick="CloseAppCommonModal()" />
        </div>
    </div>
}
