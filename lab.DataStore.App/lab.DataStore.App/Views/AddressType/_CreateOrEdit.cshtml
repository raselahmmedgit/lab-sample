@model lab.DataStore.App.PageViewModels.AddressTypePageViewModel

<form data-ajax-url="@Url.Action("Save", "AddressType", new { Area = "" })" 
      data-ajax="true"
      data-ajax-begin="AppModal.CommonModalBegin();"
      data-ajax-complete="AppModal.CommonModalComplete('dataTablesAddressType');"
      data-ajax-success="AppModal.CommonModalSuccess(data);"
      data-ajax-failure="AppModal.CommonModalFailure();"
      id="appCommonModalForm"
      method="post"
      novalidate="novalidate" class="form form-horizontal">

    <div class="form-body">
        <div class="form-group row">
            <div class="col-md-12 col-sm-12">
                <div id="appCommonModalMessage" class="alert alert-info" style="display: none;">
                </div>
            </div>
        </div>
        <div class="form-group row">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.TypeId)
            @Html.LabelFor(model => model.TypeName, new { @class = "col-md-4 col-sm-4 control-label" })
            <div class="col-md-8 col-sm-8">
                @Html.TextBoxFor(m => m.TypeName, null, new { @class = "form-control" })
                @Html.CustomModalValidationMessageFor(model => model.TypeName)
            </div>
        </div>

        <div class="form-actions form-actions-new">
            <div class="row right">
                <div class="col-md-12 col-sm-12">
                    <input type="submit" class="btn btn-primary" value="Save" />
                    <input type="button" class="btn btn-danger" value="Cancel" onclick="AppModal.CloseCommonModal();" style="margin-left: 5px;" />
                </div>
            </div>
        </div>
    </div>

</form>
