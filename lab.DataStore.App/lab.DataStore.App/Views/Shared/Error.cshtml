@model lab.DataStore.App.Models.ErrorPageViewModel
@{
    ViewData["Title"] = "Oops! Error";
    Layout = "~/Views/Shared/_LayoutError.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div id="errorPage">
                    <div class="error-page">
                        <div class="error-content">
                            <h3>
                                <i class="fa fa-warning text-yellow"></i>Oops! Something went wrong.
                            </h3>
                            <p>
                                @Model.ErrorMessage
                            </p>
                        </div>
                    </div>
                    <!-- /.error-page -->
                </div>
            </div>
        </div>
    </div>
</div>
