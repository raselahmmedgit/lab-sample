@{
    ViewData["Title"] = "Screens";
}

    <!-- ======= Header ======= -->
    <section class="d-flex align-items-center header-common header-common-img">
        <div class="container">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 d-flex flex-column" data-aos="fade-up" data-aos-delay="200">
                    <h1 class="text-center">Screens</h1>
                </div>
            </div>
        </div>
    </section><!-- End Header -->
    <main id="main">

        <!-- ======= Header Description Section ======= -->
        <section class="header-common-des about">
            <div class="container" data-aos="fade-up">
                <div class="row content">
                    <div class="col-xl-12 col-lg-12 col-md-12">
                        <p>
                            While you probably know City Glass is expert in glass door and window repair, we also repair and replace window screens and screen doors. We’ll repair tears in your window screens or door screens and if necessary replace and install new ones. Our screens come in a variety of materials and designs to meet your specifications. And you may be pleasantly surprised to discover how economical screen replacement is!
                        </p>
                    </div>
                    <div class="col-xl-12 col-lg-12 col-md-12 pt-2">
                        <hr class="hr-divide" />
                    </div>
                </div>
            </div>
        </section><!-- End Header Description Section -->
        <!-- ======= 1 Section ======= -->
        <section id="screens-section-1" class="about pt-0">
            <div class="container" data-aos="fade-up">
                <div class="row content">
                    <div class="col-xl-6 col-lg-6 col-md-6 d-flex" data-aos="fade-right" data-aos-delay="100">
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12 d-flex">
                                <h3>Screen Types</h3>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 d-flex pl-5">
                                <ul>
                                    <li><i class="icofont-square-right"></i> Aluminum Screen Frames</li>
                                    <li><i class="icofont-square-right"></i> Charcoal</li>
                                    <li><i class="icofont-square-right"></i> White</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 d-flex" data-aos="fade-right" data-aos-delay="100">
                        <div class="row">
                            <div class="col-xl-4 col-lg-4 col-md-4 d-flex" data-aos="fade-right" data-aos-delay="100">
                                <img src="~/default/img/residential/screen-repair011.jpg" data-src="@Url.Content("~/default/img/residential/screen-repair011.jpg")" class="lazy img-fluid" alt="">
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 d-flex" data-aos="fade-right" data-aos-delay="100">
                                <img src="~/default/img/residential/screen-repair007.jpg" data-src="@Url.Content("~/default/img/residential/screen-repair007.jpg")" class="lazy img-fluid" alt="">
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 d-flex" data-aos="fade-right" data-aos-delay="100">
                                <img src="~/default/img/residential/screen-repair013.jpg" data-src="@Url.Content("~/default/img/residential/screen-repair013.jpg")" class="lazy img-fluid" alt="">
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 d-flex" data-aos="fade-right" data-aos-delay="100">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- 1 Section -->

    </main><!-- End #main -->
    
    <partial name="_ContactUsBottomLink" />
