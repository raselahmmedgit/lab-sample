@{
    ViewData["Title"] = "Address";
    ViewData["SubTitle"] = "Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mb-4">
    <div class="col-8">
        <h1 class="f-26">@ViewData["SubTitle"]</h1>
    </div>
    <div class="col-2 text-right">
        <a href="@Url.Action("ApiIndex", "Address", new { Area = "" })" title="Add" class="btn btn-info">Get All By Api</a>
    </div>
    <div class="col-2 text-right">
        <a href="@Url.Action("Add", "Address", new { Area = "" })" title="Add" class="btn btn-primary">Add New</a>
    </div>
</div>

@Html.RenderAlert("AddressMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="dataTablesAddress" class="table table-hover" style="width:100%"></table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/address.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Address.LoadDataTables('dataTablesAddress', App.DisplayLength(), ("/Address/GetDataAsync"));
        });
    </script>
}