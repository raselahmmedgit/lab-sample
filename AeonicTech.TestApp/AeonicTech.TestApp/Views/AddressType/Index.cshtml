@{
    ViewData["Title"] = "Address Type";
    ViewData["SubTitle"] = "Address Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mb-4">
    <div class="col-10">
        <h1 class="f-26">@ViewData["SubTitle"]</h1>
    </div>
    <div class="col-2 text-right">
        <a href="@Url.Action("Add", "AddressType", new { Area = "" })" title="Add" class="btn btn-primary">Add New</a>
    </div>
</div>

@Html.RenderAlert("AddressTypeMessage")

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="dataTablesAddressType" class="table table-hover" style="width:100%"></table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/addresstype.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            AddressType.LoadDataTables('dataTablesAddressType', App.DisplayLength(), ("/AddressType/GetDataAsync"));
        });
    </script>
}