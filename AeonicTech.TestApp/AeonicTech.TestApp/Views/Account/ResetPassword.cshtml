@model AeonicTech.TestApp.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row">
    <div class="col-12 mt-6">
        <form method="post" asp-area="" asp-controller="Account" asp-action="ResetPassword" class="form-signin text-center">
            <h1 class="mb-3 font-weight-normal">Reset your password</h1>
            <div class="validation-summary mb-3">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="form-group mb-3">
                <label for="Email" class="sr-only">Email address</label>
                <input type="email" id="Email" name="Email" class="form-control" placeholder="Email address" required autofocus>
            </div>
            <div class="form-group mb-3">
                <label for="Password" class="sr-only">Password</label>
                <input type="password" id="Password" name="Password" class="form-control" placeholder="Password" required>
            </div>
            <div class="form-group mb-3">
                <label for="ConfirmPassword" class="sr-only">Confirm Password</label>
                <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control mb-3" placeholder="Confirm password" required>
            </div>
            <div class="form-group mb-3">
                <div class="row">
                    <div class="col-6 text-left">
                        <a href="@Url.Action("Login", "Account", new { Area = "" })" class="txt3">
                            Back to log in
                        </a>
                    </div>
                    <div class="col-6 text-right">
                        <a href="@Url.Action("Register", "Account", new { Area = "" })" class="txt3">
                            Create a new account
                        </a>
                    </div>
                </div>
            </div>
            <div class="mt-5">
                <input type="hidden" id="Code" name="Code" value="@Model.Code">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Reset</button>
            </div>
        </form>
    </div>
</div>