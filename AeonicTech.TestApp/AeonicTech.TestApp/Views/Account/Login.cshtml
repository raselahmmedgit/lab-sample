@model AeonicTech.TestApp.ViewModels.LoginViewModel
@{ 
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!--Login Page-->
<div class="row">
    <div class="col-12 mt-6">
        <form  method="post" asp-area="" asp-controller="Account" asp-action="Login" class="form-signin text-center">
            <h1 class="mb-3 font-weight-normal">Log in to continue</h1>
            <div class="validation-summary mb-3">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="form-group mb-3">
                <label for="Email" class="sr-only">Email address</label>
                <input type="email" id="Email" name="Email" class="form-control" placeholder="Email address" required autofocus>
            </div>
            <div class="form-group mb-3">
                <label for="Password" class="sr-only">Password</label>
                <input type="password" id="Password" name="Password" class="form-control" placeholder="Password" required>
            </div>
            <div class="form-group mb-3">
                <div class="checkbox text-left">
                    <label>
                        <input type="checkbox" id="RememberMe" name="RememberMe" value=""> Remember me
                    </label>
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="row">
                    <div class="col-6 text-left">
                        <a href="@Url.Action("ForgotPassword", "Account", new { Area = "" })" class="txt3">
                            Forgot Password?
                        </a>
                    </div>
                    <div class="col-6 text-right">
                        <a href="@Url.Action("Register", "Account", new { Area = "" })" class="txt3">
                            Create a new account
                        </a>
                    </div>
                </div>
            </div>
            <div class="mt-5">
                <input type="hidden" id="ReturnUrl" name="ReturnUrl" value="@Model.ReturnUrl">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
            </div>
        </form>
    </div>
</div>