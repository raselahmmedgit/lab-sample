@model IEnumerable<lab.JsonDataStore.ViewModels.EmploymentApplicationViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="float-right" style="margin-bottom: 20px;">
            @*<a href="javascript:;" data-href="@Url.Action("Create", "EmploymentApplication", new { Area = "" })" title="Add" onclick="AppModal.AddCommon(this)" class="btn btn-primary">Add New</a>*@
            <a href="@Url.Action("Create", "EmploymentApplication", new { Area = "" })" title="Add" class="btn btn-primary">Add New</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                @*<table id="dataTablesEmploymentApplication" class="table table-striped" style="width:100%"></table>*@
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3">
                                    <div class="alert alert-info">
                                        Data not found.
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/js/employmentapplication.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            //EmploymentApplication.LoadDataTables('dataTablesEmploymentApplication', App.DisplayLength(), ("/EmploymentApplication/GetDataAsync"));
        });
    </script>
}