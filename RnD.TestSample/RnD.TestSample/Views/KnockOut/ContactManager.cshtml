@model RnD.TestSample.Models.Profile
@{
    ViewBag.Title = "Contact Management";
}

<section id="profileForm">
    <input type="button" value="New Contact" data-bind="click: $root.createProfile" />
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr> 
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: Profiles">
            <tr>
                <td data-bind="text: FirstName"></td>
                <td data-bind="text: LastName"></td>
                <td data-bind="text: Email"></td>
                <td><button class="" data-bind="click: $parent.editProfile">Edit</button><button class="" data-bind="    click: $parent.removeProfile">Remove</button></td>
            </tr>
        </tbody>
    </table>
    
</section>
<script src="~/Scripts/App/app-contact.js"></script>
